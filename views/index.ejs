      <div class="wave-container">
        <h2>Tout les chapitres</h2>
        <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>

        <h3 class="title">
          <a class="single" href="/blogs/<%= blog.slug %>">
            <%= blog.title %>
          </a>
        </h3>
        <p class="text-dark">
          <% if (blog.body.length > 100 ) { %> <%= blog.body.substring(0, 100) +
          " (...)" %> <% } else { %> <%= blog.body %> <% } %>
        </p>
        <% }) %> <% } else { %>
        <p>Il n'y as pas de blogs Ã  afficher</p>
        <% } %>
      </div>

      <%- include('./partials/rightside.ejs') %>
    </div>
  </div>
